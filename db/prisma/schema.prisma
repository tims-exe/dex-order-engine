generator client {
    provider = "prisma-client-js"
    output   = "../node_modules/@prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Order {
    id            String   @id @default(uuid())
    tokenIn       String
    tokenOut      String
    amount        Float
    orderType     String
    status        String
    selectedDex   String?
    executedPrice Float?
    txHash        String?
    errorMessage  String?
    createdAt     DateTime @default(now())
    updatedAt     DateTime @updatedAt

    @@index([status])
    @@index([createdAt])
}
